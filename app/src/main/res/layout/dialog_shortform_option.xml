                android:id="@+id/outputVideoResolutionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shortform_option_video_resolution"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/outputVideoResolutionGroup"
                app:layout_constraintTop_toBottomOf="@id/outputVideoQualityGroup" />

            <RadioGroup
                android:id="@+id/outputVideoResolutionGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/isEditorEventShowButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outputVideoResolutionTitle">

                <RadioButton
                    android:id="@+id/outputVideoResolution720p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/shortform_option_video_resolution_720p"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <RadioButton
                    android:id="@+id/outputVideoResolution960p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shortform_option_video_resolution_960p"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <RadioButton
                    android:id="@+id/outputVideoResolution1080p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shortform_option_video_resolution_1080p"
                    android:textColor="#000"
                    android:textSize="13dp" />

