                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/isCropButton"
                app:layout_constraintTop_toBottomOf="@id/isPlaybackSpeedButton" />

            <CheckBox
                android:id="@+id/isCropButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/shortform_option_is_used_crop_button"
                android:textColor="#000"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/isFilterButton"
                app:layout_constraintTop_toBottomOf="@id/isVolumeButton" />

            <CheckBox
                android:id="@+id/isFilterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/shortform_option_is_used_filter_button"
                android:textColor="#000"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/outputVideoQualityTitle"
