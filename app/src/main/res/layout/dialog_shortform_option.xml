            <cloud.shoplive.sdk.common.view.ShopLiveCommonEditText
                android:id="@+id/minDurationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000"
