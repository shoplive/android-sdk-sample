            <CheckBox
                android:id="@+id/previewMuted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/shortform_option_preview_is_muted"
                android:textColor="#000"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/previewEnabledVolumeKey"
                app:layout_constraintTop_toBottomOf="@id/previewMaxCountEdit" />

            <CheckBox
                android:id="@+id/previewEnabledVolumeKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/shortform_option_preview_is_enabled_volume_key"
                android:textColor="#000"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/previewMuted" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

