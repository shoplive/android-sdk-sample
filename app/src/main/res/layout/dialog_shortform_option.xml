                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/isPlaybackSpeedButton"
                app:layout_constraintTop_toBottomOf="@id/maxDurationTitle" />

